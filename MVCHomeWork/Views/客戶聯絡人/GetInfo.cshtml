@model IEnumerable<MVCHomeWork.Models.客戶聯絡人>

@{
    Layout = null;
}


<h2>客戶聯絡人</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.職稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.手機)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.電話)
            </th>

            <th></th>
        </tr>
        @{
            var data = Model.ToArray();
        }

        @for (var i = 0; i < data.Length; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => data[i].客戶資料.客戶名稱)
                    <input type="hidden" name="data[@i].id" value="@data[i].Id" />
                   @* @Html.HiddenFor(modelItem => data[i].Id, new { Name= "data[" + i + "].Id"})*@
                    @*@Html.HiddenFor(modelItem => data[i].Id, new { Name = "data[" + i + "].Id" })*@
                </td>
                <td>
                    @Html.DropDownList(" ", (IEnumerable<SelectListItem>)(ViewBag.職稱), data[i].職稱, new { Name = "data[" + i + "].職稱" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data[i].姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data[i].Email)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => data[i].手機, new { Name = "data[" + i + "].手機" })
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => data[i].電話, new { Name = "data[" + i + "].電話" })
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="批次更新" class="btn btn-default" />
            }
